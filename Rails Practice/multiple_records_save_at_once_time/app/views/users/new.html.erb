<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>
<% if @errors && @errors.size > 0 %>
	<% @errors.each do|e| %>
		<p>
			<h2> <strong> <%= e %> </strong> </h2>
		</p>
	<% end %>
<% end %>


<%= form_for @users do|u| %>
	<p>
		<%= u.label :Name %>
		<%= u.text_field :name %>
	</p>
	<p>
		<%= u.submit %>
	</p>
<% end %>