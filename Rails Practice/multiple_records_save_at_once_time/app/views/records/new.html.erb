<h1>Records#new</h1>
<p>Find me in app/views/records/new.html.erb</p>

<%= form_for @order, url: user_records_path(@user) do |rec| %>
	<div id="old_choice">	
		<%= render partial: "field", locals: {rec: rec}  %>
	</div>
	<a href="javascript:;" id="add_new_value">Add New Value</a>

	<p>
		<%= rec.submit %>
	</p>
	<%#= rec.fields_for :value do |recs| %>
		<!-- <div style="display:none;" id="new_choice_form">
			<%#= render partial: "field" , locals: {rec: recs} %>
		</div> -->
	<%# end %>
<% end %>


<script type="text/javascript">
	$(document).ready(function(){
		$("#add_new_value").click(function(){
			$("#old_choice").append($("#new_choice_form").html());
		});
		$("#remove-value").click(function(){
			$(this).parent('#new_choice_form').remove();
		});
	});

</script>

