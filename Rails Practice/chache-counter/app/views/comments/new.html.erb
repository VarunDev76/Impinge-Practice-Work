<h1>Comments#new</h1>
<p>Find me in app/views/comments/new.html.erb</p>
<% if @errors && @errors.size > 0 %>
 	<% @errors.each do|e| %>
 		<p>
 			<%= e %>
 		</p>
 	<% end %>
 <% end %>
<%= form_for @comment , url: post_comments_path(@post) do |p| %>
	<p>
		<%#= render partial: 'form' , locals: {f:p} %>
		<%= p.text_field :comment %>
		
	</p>
	<p>
		<%= p.submit %>
	</p>
<% end %>