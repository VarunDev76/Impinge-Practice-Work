<h1>Comments#index</h1>
<p>Find me in app/views/comments/index.html.erb</p>
<style type="text/css" media="screen">
	.row{
		display: flex;
		flex-direction:row;
		width:100%;
		flex-wrap:wrap;
		padding:1% 0;
	}
	.center{
		width:85%;
		display: flex;
		margin:0 auto;
		border-bottom:3px dashed #000;
	}
	.colm{
		/*flex:1;*/
		flex-wrap:wrap;
		width:30%;
		word-wrap:break-word;
		text-align: center;
		padding:1%;
		font-size:30px;
	}
	.btn{text-decoration:none;}
</style>
 
 <% if @errors && @errors.size > 0 %>
 	<% @errors.each do|e| %>
 		<p>
 			<%= e %>
 		</p>
 	<% end %>
 <% end %>

<div class="row">
	<div class="center">
		<div class="colm"> <strong> Id </strong> </div>
		<div class="colm"> <strong> Post Id </strong> </div>
		<div class="colm"> <strong> Post </strong> </div>
		<div class="colm"> <strong> Commments </strong> </div>
		<div class="colm"> <strong> Buttons </strong> </div>
	</div>
</div>

<% @post.each do|rec| %>
	<div class="row">
		<div class="center">
			<div class="colm"> <strong> <%= rec.id  %> </strong> </div>
			<div class="colm"> <%= rec.post_id  %>  </div>
			<div class="colm"> <%= rec.post.post  %>  </div>
			<div class="colm"> <%= rec.comment  %>  </div>
			<div class="colm"> 
				<%= link_to " Show " , post_comment_path(rec.post_id , rec)  %>  
				<%= link_to " Edit " , edit_post_comment_path(rec.post_id , rec)  %>  
				<%= link_to " Delete " , post_comment_path(rec.post_id , rec) , method: :delete ,data: {confirm:'Are You Sure'}  %>  
			</div>
		</div>
	</div>
<% end %>