<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<style type="text/css" media="screen">
	.row{
		display: flex;
		flex-direction:row;
		width:100%;
		flex-wrap:wrap;
		padding:1% 0;
	}
	.center{
		width:85%;
		display: flex;
		margin:0 auto;
		border-bottom:3px dashed #000;
	}
	.colm{
		/*flex:1;*/
		flex-wrap:wrap;
		width:30%;
		line-height: 70px;
		word-wrap:break-word;
		text-align: center;
		padding:1%;
		font-size:30px;
	}
	.btn{
		display:flex;
		flex-grow:row wrap;
		justify-content:center;
		text-decoration:none;
		padding:15px 20px;
		border-radius: 20px;
		margin:8px;
	}
	.btn-success{background:#00a300;}
	.btn-danger{background: #ee1111;}
	.btn-warning{background:#da532c;}
</style>

<% if @errors && @errors.size > 0 %>
	<% @errors.each do|e| %>
		<p>
			<%= e %>
		</p>
	<% end %>
<% end %>

<div class="row">
	<div class="center">
		<div class="colm"> <strong> Id </strong> </div>
		<div class="colm"> <strong> Post </strong> </div>
		<div class="colm"> <strong> Comments </strong> </div>
		<div class="colm"> <strong> How many Comments </strong> </div>
		<div class="colm"> <strong> Buttons </strong> </div>
	</div>
</div>

<% @posts.each do|u| %>	
	<div class="row">
		<div class="center">		
			<div class="colm"> <strong> <%= u.id %> </strong> </div>
			<div class="colm"> <%= getclass(u.post)  %> </div>
			<div class="colm"> <%= getclass(u.post)  %> </div>
			<div class="colm"> <%= u.comments.size  %> </div>
			<div class="colm"> 
				<%= link_to " Show " , post_path(u) , class: "btn btn-success" %> 
				<%= link_to " Delete " , post_path(u) , method: :delete , confirm: 'Are You Sure ' , class: "btn btn-danger" %>
				<%= link_to " New Comments " , new_post_comment_url(u) , method: :delete , confirm: 'Are You Sure ' , class: "btn btn-success" %>
				<%= link_to " New post " , new_post_path , class: "btn btn-danger" %> 
			</div>
		</div>
	</div>
<% end %>