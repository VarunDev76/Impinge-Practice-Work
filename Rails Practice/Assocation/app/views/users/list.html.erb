<h1>Users#list</h1>
<p>Find me in app/views/users/list.html.erb</p>

<p>
	
	<% if @users && @users.size > 0 %>	
		<% @users.each do|u| %>
			<p>
				<%= u.id %>
				<%= u.email %>            
				<%= u.userdetail.try(:name) %>
				<%= link_to("Delete" , {:controller=>"users" , :action=>"destroy" ,:id=>u.id}, method: :delete, data: {confirm: 'Are you Sure'} ) %>
				<%= link_to("Edit" , {:controller=>"Users", :action=>"edit" , :id=>u.id } ) %>
				<%= link_to("New User" , new_user_userdetail_path ) %>
				<%= link_to("Show " , user_userdetails_path ) %>
			</p>
		<% end %>
	<% end %>
</p>
