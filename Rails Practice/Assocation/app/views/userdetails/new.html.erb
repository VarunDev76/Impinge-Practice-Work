<h1>Userdetails#new</h1>
<p>Find me in app/views/userdetails/new.html.erb</p>
	
	<% if @errors && @errors.size  > 0 %>
		<% @errors.each do|e| %>
			<p>
				<%= e %>
			</p>
		<% end %>
	<% end %>

<%= form_for @user, :url=>{:controller=>"users", :action=>"create"} do |details| %>
	<p>
		<%= details.label :email  %>
		<%= details.text_field :email  %><br>
	</p>
	<p>
		<%= details.label :password  %>
		<%= details.text_field :password  %><br>
	</p>
	<%= render partial:"form" , locals: {f:details} %>
	<p>
		
		<%= details.submit %>
	</p>
<% end %>