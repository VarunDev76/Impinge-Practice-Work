					<div class="colm"> <%= i.text_field :salary_under_80cc %>  </div>
				</div>
				<div class="row">
					<div class="colm"> <strong> Other </strong>  </div>
					<div class="colm"> <%= i.text_field :other %>  </div>
				</div>
				<div class="row">
					<div class="colm"> <strong> Medical RHS </strong>  </div>
					<div class="colm"> <%= i.text_field :medical_rhs %>  </div>
				</div>
				<div class="row">
					<div class="colm"> <strong> HRA </strong>  </div>
					<div class="colm"> <%= i.text_field :hra %>  </div>
				</div>
				<div class="row">
					<div class="colm"> <%= i.submit class: "btn btn-success" , onClick: "saveData()" %>  </div>
					<div class="colm"> <%= i.text_field :total_tax %>  </div>
				</div>
			<%end%>
		</div>
		<!-- Tax Ratio Code Starts here -->
