<style type="text/css">
	.wrapper{display:flex;flex-flow:row wrap;width:100%;}
	.center{width:80%;margin:0 auto;}
	.outer-container{display:flex;flex-flow:row wrap;justify-content:space-around;line-height:70px;}
	.row{width:100%;display:flex; flex-flow:row wrap;justify-content:space-around;line-height:70px;}
