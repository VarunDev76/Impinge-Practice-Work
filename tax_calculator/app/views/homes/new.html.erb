<div class="wrapper">
	<div class="center">
		<div class="outer-container">
			<div class="row">
				<div class="colm"> <h1> <u> Tax Calculator </u> </h1> </div>
			</div>
			<%= form_for @tax  do|i| %>
				<div class="row">
					<div class="colm"> <strong> Total Income </strong>  </div>
					<div class="colm"> <%= i.text_field :total_income %>  </div>
				</div>
				<div class="row">
